import numpy as np
import matplotlib.pyplot as plt
import math

def SimpArmy():  
    y=[]
    for i in range(1001):
        n = (i+1)*2 
        absc=np.linspace(0,1,n+1)
        value=[]
        integral = 0
        for j in range(n+1):
            value.append(math.sqrt(1-absc[j]**2))
        for k in range(1,i+2):
            integral+=(1/(3*n))*(value[2*k-2]+4*value[2*k-1]+value[2*k])
        y.append(4*integral)
    return y
    

def BelleDelphine():
    plt.plot(SimpArmy())
    plt.plot([0,1000],[3.14159,3.14159],'r--')
    plt.xlabel('\N{LATIN SMALL LETTER N}')
    plt.ylabel('$\pi_n$')
    plt.suptitle('Estimation de \N{GREEK SMALL LETTER PI} via la méthode d’intégration composite de Simpson')
    plt.show()
    
print(BelleDelphine())

    
    
